<local:Component x:Class="Parseh.UI.Views.ChatContactItemCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parseh.UI.Views"
             xmlns:vm="clr-namespace:Parseh.UI.ViewModels"
             xmlns:converter="clr-namespace:Parseh.UI.BindingConverters"
             mc:Ignorable="d" 
             d:DesignHeight="70" 
             d:DesignWidth="250"
             Height="60">

    <local:Component.Resources>
        <Style TargetType="ContentControl" x:Key="CardStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid x:Name="ContactCard" Background="{StaticResource Gray13Brush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"  
                                        HorizontalAlignment="Left"
                                        BorderThickness="0" 
                                        Width="1.2" 
                                        Visibility="{Binding Selected, Converter={converter:BooleanToVisibility}}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0, 0" EndPoint="0, 1">
                                        <GradientStop Color="{StaticResource Gray13}" Offset="0"/>
                                        <GradientStop Color="{StaticResource Gray4}" Offset="0.5"/>
                                        <GradientStop Color="{StaticResource Gray13}" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <!--profile picture-->
                            <Border Grid.Column="0" 
                                    Padding="3" 
                                    BorderThickness="0"  
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                <Border Background="{StaticResource Gray15Brush}"
                                        BorderThickness="0"
                                        Width="45"
                                        Height="{Binding Width, RelativeSource={RelativeSource Mode=Self}}"
                                        CornerRadius="12">

                                    <TextBlock Text="{Binding Nikname}"
                                               FontSize="{StaticResource FS18}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="{StaticResource BlackOliveBrush}"/>

                                </Border>
                            </Border>

                            <Border Grid.Column="1"
                                    Padding="4"
                                    BorderThickness="0" >
                                <StackPanel Orientation="Vertical"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Contact}" 
                                               HorizontalAlignment="Left"
                                               Foreground="White"
                                                   />
                                    <TextBlock Text="{Binding Message}" 
                                               HorizontalAlignment="Left"
                                               Foreground="{StaticResource Gray3Brush}"
                                               TextTrimming="WordEllipsis"
                                                   />
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2"
                              Padding="4"
                              BorderThickness="0">
                                <Grid VerticalAlignment="Top">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0">
                                        <TextBlock Text="Tue"
                                                   Foreground="{StaticResource Gray3Brush}"
                                                   FontSize="{StaticResource FS12}"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <Grid Grid.Row="1" VerticalAlignment="Top">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0"
                                                CornerRadius="2"
                                                Margin="2"
                                                Padding="2"
                                                Background="{StaticResource Gray3Brush}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" >

                                            <TextBlock Text="{Binding UnreadMessageCount}" 
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontSize="{StaticResource FS12}"/>

                                        </Border>

                                        <Image Grid.Column="1" 
                                               Source="/Source/Presentation/Resources/Images/Icon/Pin.png"
                                               Width="16"
                                               Height="16"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Visibility="{Binding Pinned, Converter={converter:BooleanToVisibility}}"/>

                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>

                            <DataTrigger Binding="{Binding Selected}" Value="True">
                                <Setter Property="Background" TargetName="ContactCard" Value="{StaticResource Gray14Brush}"/>
                            </DataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Selected}" Value="False"/>
                                    <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Mode=Self}}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Background" TargetName="ContactCard" Value="{StaticResource Gray10Brush}"/>
                            </MultiDataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Selected}" Value="False"/>
                                    <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Mode=Self}}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Background" TargetName="ContactCard" Value="{StaticResource Gray13Brush}"/>
                            </MultiDataTrigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
    </local:Component.Resources>

    <ContentControl Style="{StaticResource CardStyle}"/>

</local:Component>
