<local:Component 
             x:Class="Parseh.UI.Views.ChatContactMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parseh.UI.Views"
             xmlns:vm="clr-namespace:Parseh.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250"
             d:DataContext="{x:Static vm:ChatContactDesignModel.Self}"
             DataContext="{x:Static vm:ChatContactDesignModel.Self}"
             Width="300">

    <local:Component.Template>
        <ControlTemplate TargetType="{x:Type UserControl}">
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <!--buttons zone-->
                    <RowDefinition Height="40"/>
                    <!--contact list-->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Padding="2">
                    <!--2-->

                    <!--menu buttons-->
                    <Border Background="{StaticResource Gray14Brush}"
                            CornerRadius="2">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">

                                <Button Style="{StaticResource ImageButtonStyle}">
                                    <Image Source="/Source/Presentation/Resources/Images/Icon/Chat.png"/>
                                </Button>

                                <Button Style="{StaticResource ImageButtonStyle}">
                                    <Image Source="/Source/Presentation/Resources/Images/Icon/Contact.png"/>
                                </Button>

                                <Button Style="{StaticResource ImageButtonStyle}">
                                    <Image Source="/Source/Presentation/Resources/Images/Icon/Picture.png"/>
                                </Button>

                            </StackPanel>

                            <Button Grid.Column="2"
                                    Style="{StaticResource ImageButtonStyle}">
                                <Image Source="/Source/Presentation/Resources/Images/Icon/Setting.png"/>
                            </Button>

                            <!--<Button Grid.Column="2" 
                                    Content="{StaticResource FontAwesomeSettingIcon}" 
                                    Style="{StaticResource ChatSidebarButton}"
                                    Foreground="{StaticResource Gray5Brush}"/>-->
                        </Grid>

                    </Border>
                </Border>

                <Border Grid.Row="1" Background="{StaticResource Gray13Brush}">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Model.Contacts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <local:ChatContactItemCard/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!--<ContentPresenter Content="{TemplateBinding Content}"/>-->
                </Border>

            </Grid>
        </ControlTemplate>
    </local:Component.Template>

</local:Component>
