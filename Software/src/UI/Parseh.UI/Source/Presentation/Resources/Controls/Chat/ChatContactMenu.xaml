<local:Component 
             x:Class="Parseh.UI.Views.ChatContactMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parseh.UI.Views"
             xmlns:vm="clr-namespace:Parseh.UI.ViewModels"
             xmlns:res="clr-namespace:Parseh.UI.Resources"
             xmlns:convert="clr-namespace:Parseh.UI.BindingConverters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="250"
             Width="300"
             MinWidth="300"
             MaxWidth="300"
             x:Name="this"
             >

    <local:Component.Template>
        <ControlTemplate TargetType="{x:Type UserControl}">
            <Grid Grid.Column="0" Background="{StaticResource Gray15Brush}">
                <Grid.RowDefinitions>
                    <!--buttons zone-->
                    <RowDefinition Height="Auto"/>
                    <!--contact list-->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="Transparent"
                        Padding="4"
                         Height="45"
                        res:HideSearchbar.Value="{Binding IsSearching}"
                        >

                    <Border CornerRadius="5" 
                            Background="{StaticResource Gray14Brush}"
                           >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" 
                                     Tag="Search your title" 
                                     FontSize="{StaticResource FS11}"
                                     Margin="5"
                                     Style="{StaticResource SendMessageMarkTextBox}"
                                     res:FocusOnLoad.Value="True"/>

                            <Button Grid.Column="1" 
                                    Command="{Binding CloseSearchbarCommand}"
                                    Style="{StaticResource ChatMessageTopBarImageButtonStyle}"
                                    Padding="5">
                                <Image Source="/Source/Presentation/Resources/Images/Icon/Close.png"/>
                            </Button>
                        </Grid>
                    </Border>

                </Border>

                <!--Menu-->
                <Border Background="Transparent"
                        Padding="4"
                        Height="45"
                        res:ShowSearchbar.Value="{Binding IsSearching}">

                    <!--menu buttons-->
                    <Border Background="{StaticResource Gray14Brush}"
                            CornerRadius="5">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Button Style="{StaticResource ImageButtonStyle}">
                                    <Image Source="/Source/Presentation/Resources/Images/Icon/Chat.png"/>
                                </Button>

                                <Button Style="{StaticResource ImageButtonStyle}">
                                    <Image Source="/Source/Presentation/Resources/Images/Icon/Contact.png"/>
                                </Button>

                                <Button Style="{StaticResource ImageButtonStyle}">
                                    <Image Source="/Source/Presentation/Resources/Images/Icon/Picture.png"/>
                                </Button>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Command="{Binding ShowSearchbarCommand}" 
                                        Style="{StaticResource ImageButtonStyle}">
                                    <Image Source="/Source/Presentation/Resources/Images/Icon/Search.png"/>
                                </Button>

                                <Button Style="{StaticResource ImageButtonStyle}">
                                    <Image Source="/Source/Presentation/Resources/Images/Icon/Setting.png"/>
                                </Button>
                            </StackPanel>
                        </Grid>

                    </Border>
                </Border>

                <Border Grid.Row="1" Background="{StaticResource Gray13Brush}">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto">
                        <!--ItemsSource="{Binding Model.Contacts}"-->
                        <ItemsControl >
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <local:ChatContactItemCard/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

            </Grid>
        </ControlTemplate>
    </local:Component.Template>

</local:Component>
