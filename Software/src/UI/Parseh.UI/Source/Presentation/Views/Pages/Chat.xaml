<local:ContentPage x:Class="Parseh.UI.Views.Chat"
                   x:TypeArguments="vm:ChatViewModel"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                   xmlns:local="clr-namespace:Parseh.UI.Views"
                   xmlns:vm="clr-namespace:Parseh.UI.ViewModels"
                   xmlns:res="clr-namespace:Parseh.UI.Resources"
                   xmlns:convert="clr-namespace:Parseh.UI.BindingConverters"
                   mc:Ignorable="d" 
                   d:DesignHeight="600" 
                   d:DesignWidth="800">

    <Grid>

        <!--setting menu-->
        <local:SettingMenu DataContext="{Binding SettingMenuModel}" 
                           res:ZIndexFadeVisibilityAnimate.Value="{Binding DataContext.IsOpenSettingMenu, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:Chat}}}"/>

        <!--attachment menu-->
        <local:PopupMenu DataContext="{Binding AttachmentMenuModel}"
                         res:ZIndex.Value="{Binding Path=DataContext.IsOpenAttachmentMenu, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:Chat}}}"
                         >
            <local:AttachmentMenu DataContext="{Binding}"/>
        </local:PopupMenu>

        <!--chat main content-->
        <Border Background="{StaticResource Gray15Brush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!--chat contacts-->
                <local:ChatContactMenu Grid.Column="0"/>

                <!--selected chat messages-->
                <local:ChatMessageContainer Grid.Column="1" 
                                            Opacity="{Binding SelectedChat, Converter={convert:BooleanToOpacity}}"
                                            res:FadeAnimate.Value="{Binding SelectedChat}"/>

                <!--profile info-->
                <Border Grid.Column="2"/>
            </Grid>
        </Border>

    </Grid>

</local:ContentPage>
